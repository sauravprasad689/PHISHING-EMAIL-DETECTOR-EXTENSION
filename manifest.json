{
  "manifest_version": 3,
  "name": "Gmail AI Phish Guard",
  "description": "AI-powered Gmail phishing, spam & malware detector",
  "version": "1.0",

  "permissions": [
    "activeTab",
    "scripting",
    "storage"
  ],

  "host_permissions": [
    "https://mail.google.com/*"
  ],

  "background": {
    "service_worker": "background.js"
  },

  "content_scripts": [
    {
      "matches": ["https://mail.google.com/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],

  "icons": {
    
    "128": "assets/icon128.png"
  },

  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
  
      "128": "assets/icon128.png"
    }
  }
}
